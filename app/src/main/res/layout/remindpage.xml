<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/remind"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_btn_newpill"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:textSize="55dp"
        android:text="18：30"
        android:id="@+id/main_time1"
        />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="#6c6c6c"
        android:textSize="18dp"
        android:text="2016年6月2日"
        android:textAlignment="center"
        android:id="@+id/main_date1"
        android:layout_marginTop="5dp"
        />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6c6c6c"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:text="周四"
        android:id="@+id/main_day1"
        android:layout_marginTop="5dp"
        />
    </LinearLayout>
    <ListView
        android:id="@+id/list_remind"
        android:layout_width="match_parent"
        android:layout_height="450px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/list_remind"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="350px"
            android:layout_height="150px"
            android:text="现在服用"
            android:textColor="@color/text_btn_newpill"
            android:textSize="30dp"
            android:id="@+id/button_takenow"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/button_newpill"
            />
        <Button
            android:layout_width="350px"
            android:layout_height="150px"
            android:text="稍后服用"
            android:textColor="@color/text_btn_newpill"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/button_takelater"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/button_newpill"
            />
    <Button
        android:layout_width="700px"
        android:layout_height="150px"
        android:text="已服用"
        android:textColor="@color/text_btn_newpill"
        android:textSize="30dp"
        android:id="@+id/btn_taken"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/button_newpill"
        android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
